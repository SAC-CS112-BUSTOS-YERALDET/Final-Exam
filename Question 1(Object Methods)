public class Object 
{
    public int speed;
    public int elevation;
    public double distance = 0.0;
    public double altitude = 0.0;

    public Object()
    {
        speed = 1;
        elevation = 1;
    }

    public void SetAirSpeed(int airSpeedMPH)
    {
        speed = airSpeedMPH;
    }

    public void SetAltimeter(int elevationPerMinute)
    {
        elevation = elevationPerMinute;
    }

    public void Fly() // 1 minute of flight.
    {
        distance += (speed / 60);
        altitude += elevation;
    }
    
    public void PrintStatus()
    {
        System.out.printf("Distance Traveled: %0.1f", distance);
        System.out.printf("Altitude: %0.1f", altitude);
        
    }


}

